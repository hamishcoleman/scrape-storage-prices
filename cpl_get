#!/bin/bash
#
# Get the CPL raw html files, ready for processing with the extractor
#
# TODO
# - be smarter about the pagination - dont just hardcode it

PREFIX="$1"
if [ -n "$PREFIX" ]; then
    PREFIX="$PREFIX/"
fi

set -e

curl_h() {
    local FILE="$1"
    local URL="$2"
    echo "TRY $URL"
    curl \
        -H 'User-Agent: Mozilla/5.0 (X11; Linux x86_64; rv:65.0) Gecko/20100101 Firefox/65.0' \
        -H 'Accept: text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8' \
        -H 'Accept-Language: en-US,en;q=0.5' \
        --compressed \
        -H 'Referer: https://cplonline.com.au/storage.html?limit=60' \
        -H 'Connection: keep-alive' \
        -H 'Cookie: frontend=a7d78ba0d87b8e06af91154683c1c077; frontend_cid=Ruatt0e3lN0l1SUG; __zlcmid=upicUqBWg7APsR' \
        -H 'Upgrade-Insecure-Requests: 1' \
        -o "$FILE" \
        "$URL"
}

(cat <<EOF
cplstorage-01.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=1
cplstorage-02.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=2
cplstorage-03.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=3
cplstorage-04.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=4
cplstorage-05.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=5
cplstorage-06.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=6
cplstorage-07.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=7
cplstorage-08.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=8
cplstorage-09.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=9
cplstorage-10.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=10
cplstorage-11.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=11
cplstorage-12.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=12
cplstorage-13.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=13
cplstorage-14.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=14
cplstorage-15.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=15
cplstorage-16.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=16
cplstorage-17.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=17
cplstorage-18.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=18
cplstorage-19.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=19
cplstorage-20.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=20
cplstorage-21.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=21
cplstorage-22.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=22
cplstorage-23.html     https://cplonline.com.au/storage.html?dir=asc&limit=60&order=popularity&p=23
EOF
) | while read -r name url; do
    curl_h "$PREFIX$name" "$url"
    sleep 10s
done
